generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Chore {
  id         Int      @id @default(autoincrement())
  userId     Int      @map("user_id")
  toDoName   String   @db.VarChar(255) @map("to_do_name")
  priority   Int      @db.SmallInt
  status     Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "chores_usuario_id_fkey")
  priorityRef Priority @relation(fields: [priority], references: [id], map: "chores_prioridade_fkey")

  @@map("chores")
}

model Priority {
  id     Int    @id @db.SmallInt
  name   String @map("nome")
  chores Chore[]

  @@map("prioridades")
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(50)
  email     String   @unique @db.VarChar(100)
  password  String   @db.VarChar(100)
  role      UserRole @default(USER)
  createdAt DateTime @default(now()) @map("created_at")
  chores    Chore[]

  @@map("users")
}